package rpc

import (
	"aliens/module/cluster/dispatch"
	"aliens/protocol"
	"aliens/exception"
	"aliens/log"
	"aliens/protocol/base"
)

var ${Module} = &${module}RPCHandle{"${module}"}


type ${module}RPCHandle struct {
	name string
}


func (this *${module}RPCHandle) request(request *${package}.Request) *${package}.Response {
	rpcRet, err := dispatch.RPC.SyncRequest(this.name, request)
	if err != nil {
		log.Error(err)
		exception.GameException(${package}.Code_InvalidService)
	}
	any, ok := rpcRet.(*base.Any)
	if !ok {
		log.Error("invalid rpc ret data")
		exception.GameException(${package}.Code_InvalidService)
	}
	messageRet := &${package}.Response{}
	messageRet.Unmarshal(any.GetValue())
	return  messageRet
}

<message>
func (this *${module}RPCHandle) ${o_request}(request *${package}.${o_request}) *${package}.${o_response} {
	message := &${package}.Request{
		${Module}:&${package}.Request_${o_request}{
			${o_request}:request,
		},
	}
	messageRet := this.request(message)
	return messageRet.Get${o_response}()
}
